    <div class="flex max-w-screen-md w-screen p-4 justify-center">
        <div class="flex flex-col gap-[0.5rem] md:gap-12 items-center">
            <h1
                class="md:text-[9rem] sm:text-[8rem] text-[7rem] xs:text-[8rem] font-bold tracking-tighter leading-[6.5rem]"
