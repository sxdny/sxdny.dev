<style>
  .image-container {
    position: relative;
  }

  .image-container img {
    width: 100%;
    height: auto;
    z-index: 1;
  }

  .image-container .icono-svg {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
  }

  .image-container:hover svg {
    opacity: 1;
  }

  .image-container:hover h1 {
    opacity: 1;
  }

  .image-container:hover > img {
    opacity: 0.25;
  }
</style>
