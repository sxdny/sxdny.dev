    <ul class="socials flex justify-between gap-3 items-center">
      <li>
        <a
          href="https://github.com/sxdny"
          rel="noopener noreferrer"
          class="text-lg sm:text-xl text-neutral-500 hover:text-lime-400"
        >
          <GithubOutlined />
        </a>
      </li>
      <li>
        <a
          href="https://twitter.com/SidneySilvaBra1"
          rel="noopener noreferrer"
          class="text-lg sm:text-xl text-neutral-500 hover:text-lime-400"
        >
          <TwitterOutlined />
        </a>
      </li>
      <li>
        <a
          href="https://www.linkedin.com/in/devsidney/"
          rel="noopener noreferrer"
          class="text-lg sm:text-xl text-neutral-500 hover:text-lime-400"
