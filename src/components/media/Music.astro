---
const { url, title, artist } = Astro.props;
---

<div class="text-white">
    <img class="rounded border border-neutral-800" src={url}>
    <div class="flex flex-col py-1">
        <h1 class="text-white text-sm">{title}</h1>
        <h2 class="text-neutral-300 text-sm">{artist}</h2>
    </div>
</div>